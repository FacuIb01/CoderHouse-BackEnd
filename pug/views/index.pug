html
    head 
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        title Productos Con Pug 

    body 
        
        if productos.length == 0
            h2 No hay productos
            br
            br
        else
            table(class="table")
                thead
                    tr 
                        th(scope="col") #
                        th(scope="col") Nombre
                        th(scope="col") Precio
                        th(scope="col") Foto
                tbody
                each producto in productos
                    tr  
                        th(scope="row")= producto.id
                        td= producto.nombre
                        td= producto.precio
                        td 
                            img(src=producto.img , style="width:2rem")
                        
        form(action="/api/productos" method="post")
                div(class="input-group mb-4")
                    span(class="input-group-text" id="basic-addon1") Nombre
                    input(type="text" class="form-control" placeholder="Nombre producto" aria-label="Username" aria-describedby="basic-addon1" name="nombre")


                div(class="input-group mb-4")
                    span(class="input-group-text" id="basic-addon2") Precio 
                    input(type="text" class="form-control" placeholder="Precio Producto" aria-label="Recipient's username" aria-describedby="basic-addon2" name="precio")
                    br


                div(class="input-group mb-4")
                    span(class="input-group-text" id="basic-addon3") Imagen 
                    input(type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3" name="img" placeholder="https://")

                button(type="submit") Subir Producto

