<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="/socket.io/socket.io.js"></script>
    <title>Productos con Hbs</title>
</head>
<body>
    {{{body}}}
    <script type="text/javascript">
        const socket = io();
        const url = window.location.href;
        if(url == 'http://localhost:8080/'){
        socket.on("productos", function(data){
            const lista = document.getElementById("productosLista");
            console.log(data)
            const html = data.map((e) => {
                return (`<tr><th scope=""row"">${e.id}</th><td>${e.nombre}</td><td>${e.precio}</td><td><img src="${e.img}" alt="" style="width: 2rem"></td></tr>`)
            }).join(" ")

            lista.innerHTML = html;
            
            })
        }else{
        socket.on("mensajes", (data) => {
            const mensajes = document.getElementById("mensajesChat");
            const html = data.map((e) => {
                return (`<div><strong style="color:blue">${e.autor}</strong><p style="color:brown;">${e.date.toString()}</p><I style="color: green">${e.mensaje}</I></div>`)
            }).join(" ");

            mensajes.innerHTML = html;
        });

        }



        const agregarProducto = () =>{
            let nombre = document.getElementById("nombre").value;
            let precio = document.getElementById("precio").value;
            let img = document.getElementById("img").value;
            const data = {
                nombre: nombre,
                precio: precio,
                img: img
            }
            socket.emit("agregarProducto", data);
        }

        const enviarMensaje = ()=>{
            let nombre = document.getElementById("nombreChat").value
            let mensaje = document.getElementById("mensaje").value
            const data = {
                autor: nombre,
                mensaje: mensaje,
                date: Date.now().toString()
            }
            socket.emit("enviarMensaje", data);
        }


    </script>
</body>
</html>